---
type Props = {
  small?: boolean;
  large?: boolean;
  split?: boolean;
};

const { small, large, split} = Astro.props;
---

<div class:list={["stack", { small, large, split }]}>
  <slot />
</div>

<style is:global>
  .stack > * + * {
    margin-block-start: 1.5rem;
  }

  .stack.small > * + * {
    margin-block-start: .75rem;
  }

  .stack.large > * + * {
    margin-block-start: 6rem;
  }

  .stack.split {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .stack.split > :last-child {
    margin-block-start: auto;
  }
</style>
