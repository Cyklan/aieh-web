---
type Props = {
  flipped?: boolean;
  children: any;
};

const { flipped } = Astro.props
---

<div class:list={["with-sidebar", { flipped }]}>
  <slot />
</div>

<style>
  .with-sidebar {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xl);
  }

  .flipped {
    flex-direction: row-reverse;
  }

  .with-sidebar > :global(:first-child) {
    flex-grow: 1;
  }

  .with-sidebar > :global(:last-child) {
    flex-basis: 0;
    flex-grow: 999;
    min-inline-size: 50%;
  }
</style>
