---
type Props = {
  children: any;
  level?: 1 | 2 | 3 | 4;
  onDarkBackground?: boolean;
  centered?: boolean;
};

const { level = 2, onDarkBackground, centered } = Astro.props;
---

{
  level === 1 && (
    <h1 class:list={{ onDarkBackground, centered }}>
      <slot />
    </h1>
  )
}
{
  level === 2 && (
    <h2 class:list={{ onDarkBackground, centered }}>
      <slot />
    </h2>
  )
}
{
  level === 3 && (
    <h3 class:list={{ onDarkBackground, centered }}>
      <slot />
    </h3>
  )
}
{
  level === 4 && (
    <h4 class:list={{ onDarkBackground, centered }}>
      <slot />
    </h4>
  )
}

<style>
  h1,
  h2,
  h3,
  h4 {
    color: var(--text);
    font-family:
      "Fjalla One",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
  h1 {
    font-size: var(--font-step-5);
  }

  h2 {
    font-size: var(--font-step-4);
  }

  h3 {
    font-size: var(--font-step-3);
  }

  h4 {
    font-size: var(--font-step-2);
  }

  .onDarkBackground {
    color: var(--background);
  }

  .centered {
    text-align: center;
  }
</style>
